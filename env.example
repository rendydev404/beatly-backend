# =====================================================
# BEATLY BACKEND - Environment Variables
# =====================================================
# Copy this file to .env.local and fill in your values

# -----------------------------------------------------
# CORS Configuration (REQUIRED for cross-domain access)
# -----------------------------------------------------
# Your Hostinger frontend URL (without trailing slash)
FRONTEND_URL=https://your-domain.hostinger.com

# Comma-separated list of allowed origins (optional, for multiple domains)
ALLOWED_ORIGINS=https://your-domain.hostinger.com,http://localhost:3000

# -----------------------------------------------------
# Supabase (REQUIRED)
# -----------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# -----------------------------------------------------
# External APIs
# -----------------------------------------------------
# Spotify
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# YouTube
YOUTUBE_API_KEY=your_youtube_api_key

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# -----------------------------------------------------
# Payment Gateway
# -----------------------------------------------------
# Tripay
TRIPAY_API_KEY=your_tripay_api_key
TRIPAY_PRIVATE_KEY=your_tripay_private_key
TRIPAY_MERCHANT_CODE=your_tripay_merchant_code
TRIPAY_IS_PRODUCTION=false



# -----------------------------------------------------
# Google Analytics (Optional)
# -----------------------------------------------------
GA_PROPERTY_ID=your_ga_property_id

# -----------------------------------------------------
# API Security (Optional)
# -----------------------------------------------------
MASTER_API_KEY=your_master_api_key
